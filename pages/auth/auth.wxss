/* pages/auth/auth.wxss */
.auth-container {
  min-height: 100vh;
  background: #fef0f0;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  box-sizing: border-box;
}

/* 顶部装饰 */
.auth-header {
  text-align: center;
  margin-top: 80rpx;
  margin-bottom: 60rpx;
}

.logo-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 24rpx;
  margin: 0 auto 30rpx;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 20rpx;
}

/* 内容区域 */
.auth-content {
  flex: 1;
  width: 100%;
  max-width: 600rpx;
}

.login-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 32rpx;
  padding: 60rpx 40rpx;
  backdrop-filter: blur(20rpx);
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
}

/* 登录方式 */
.auth-methods {
  margin-bottom: 40rpx;
}

.auth-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 24rpx;
  border: none;
  position: relative;
  overflow: hidden;
}

.auth-btn.primary {
  background: linear-gradient(135deg, #ffc1cc 0%, #ffb3ba 100%);
  color: #666;
  box-shadow: 0 8rpx 24rpx rgba(255, 193, 204, 0.4);
}

.auth-btn::after {
  border: none;
}

.btn-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

/* 登录说明 */
.auth-tips {
  margin-top: 50rpx;
  padding-top: 40rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
}

.tip-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  color: #666;
}

.tip-icon {
  font-size: 28rpx;
  margin-right: 16rpx;
  width: 40rpx;
  text-align: center;
}

/* 必须登录提示 */
.required-login-tip {
  margin-top: 30rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, rgba(255, 193, 204, 0.1), rgba(255, 179, 186, 0.1));
  border: 2rpx solid rgba(255, 193, 204, 0.2);
  border-radius: 16rpx;
  text-align: center;
}

.tip-text {
  font-size: 26rpx;
  color: #ffc1cc;
  font-weight: 500;
}

/* 已登录状态 */
.logged-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 32rpx;
  padding: 60rpx 40rpx;
  backdrop-filter: blur(20rpx);
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  text-align: center;
}

.user-preview {
  margin-bottom: 50rpx;
}

.avatar-wrapper {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  margin: 0 auto 30rpx;
  border-radius: 50%;
  overflow: hidden;
  background: transparent;
  border: none;
  padding: 0;
}

.avatar-wrapper::after {
  border: none;
}

.user-avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  object-fit: cover;
  object-position: center;
}

.avatar-edit {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 48rpx;
  height: 48rpx;
  background: #ffc1cc;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #ffffff;
  border: 4rpx solid #ffffff;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.welcome-text {
  font-size: 28rpx;
  color: #666;
}

.complete-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #ffc1cc 0%, #ffb3ba 100%);
  color: #666;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(255, 193, 204, 0.4);
}

.complete-btn::after {
  border: none;
}

/* 底部说明 */
.auth-footer {
  margin-top: 60rpx;
  text-align: center;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

.footer-link {
  color: rgba(255, 255, 255, 0.9);
  text-decoration: underline;
}

/* 响应式适配 */
@media screen and (max-height: 667px) {
  .auth-header {
    margin-top: 40rpx;
    margin-bottom: 40rpx;
  }
  
  .logo-placeholder {
    width: 100rpx;
    height: 100rpx;
    font-size: 50rpx;
  }
  
  .title {
    font-size: 40rpx;
  }
}

.back-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #ffc1cc 0%, #ffb3ba 100%);
  color: #666;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(255, 193, 204, 0.4);
} 