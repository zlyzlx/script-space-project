/**publish-carpool.wxss**/
.container {
  background: linear-gradient(135deg, #ff6b9d 0%, #c44569 100%);
  min-height: 100vh;
  padding: 20rpx;
}

.publish-form {
  margin-bottom: 160rpx;
}

.form-container {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(255, 107, 157, 0.12), 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  animation: slideUp 0.3s ease-out;
  overflow: hidden;
}

.section-title {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  padding: 24rpx 30rpx;
  font-size: 30rpx;
  font-weight: bold;
  text-align: center;
  margin: 0;
}

.form-item {
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.form-item:last-child {
  border-bottom: none;
}

.item-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
}

.item-label.required::after {
  content: '*';
  color: #ff4757;
  margin-left: 6rpx;
  font-size: 24rpx;
}

.item-input {
  width: 100%;
  padding: 16rpx 20rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #fafafa;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.item-input:focus {
  border-color: #ff6b9d;
  background: white;
  box-shadow: 0 0 0 6rpx rgba(255, 107, 157, 0.1);
}

.item-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 16rpx 20rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #fafafa;
  resize: none;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.item-textarea:focus {
  border-color: #ff6b9d;
  background: white;
  box-shadow: 0 0 0 6rpx rgba(255, 107, 157, 0.1);
}

.picker-display {
  padding: 16rpx 20rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #fafafa;
  color: #333;
  transition: all 0.3s ease;
  position: relative;
}

.picker-display.placeholder {
  color: #999;
}

.picker-display:active {
  border-color: #ff6b9d;
  background: white;
  transform: scale(0.98);
}

.picker-display::after {
  content: '▼';
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 20rpx;
  color: #999;
}

.location-input {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  background: #fafafa;
  transition: all 0.3s ease;
}

.location-input:active {
  border-color: #ff6b9d;
  background: white;
  transform: scale(0.98);
}

.location-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.location-text.placeholder {
  color: #999;
}

.location-icon {
  font-size: 28rpx;
  margin-left: 15rpx;
  color: #ff6b9d;
}

.location-detail {
  margin-top: 12rpx;
  padding: 12rpx 16rpx;
  background: #fce4ec;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #666;
  border-left: 4rpx solid #ff6b9d;
}

.price-input {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.price-input .item-input {
  flex: 1;
}

.price-unit {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
  white-space: nowrap;
}

.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 12rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  box-shadow: 0 -8rpx 32rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
  border-top: 1rpx solid #f0f0f0;
}

.cancel-btn,
.reset-btn,
.submit-btn {
  flex: 1;
  padding: 20rpx 0;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  transition: all 0.2s ease;
  position: relative;
  overflow: hidden;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.cancel-btn:active {
  background: #e8e8e8;
}

.reset-btn {
  background: #fff7e6;
  color: #fa8c16;
  border: 1rpx solid #ffec3d;
}

.reset-btn:active {
  background: #fff1b8;
}

.submit-btn {
  background: linear-gradient(135deg, #ff6b9d, #c44569);
  color: white;
  box-shadow: 0 6rpx 20rpx rgba(255, 107, 157, 0.3);
}

.submit-btn:active {
  transform: scale(0.96);
}

.submit-btn.submitting {
  background: #ccc;
  box-shadow: none;
  color: #999;
}

.submit-btn.submitting:active {
  transform: none;
}

/* 响应式设计 */
@media (max-width: 400px) {
  .container {
    padding: 16rpx;
  }
  
  .action-buttons {
    flex-direction: column;
    gap: 12rpx;
  }
  
  .cancel-btn,
  .reset-btn,
  .submit-btn {
    flex: none;
  }
  
  .form-item {
    padding: 20rpx 24rpx;
  }
  
  .section-title {
    padding: 20rpx 24rpx;
    font-size: 28rpx;
  }
}

/* 动画效果 */
@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 输入框占位符样式 */
.item-input::placeholder,
.item-textarea::placeholder {
  color: #999;
  font-size: 28rpx;
}

/* 聚焦状态的优化 */
.item-input:focus,
.item-textarea:focus,
.picker-display:active,
.location-input:active {
  outline: none;
}

/* 按钮点击反馈 */
.cancel-btn:active,
.reset-btn:active {
  transform: scale(0.96);
} 