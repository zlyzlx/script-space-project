/**profile.wxss**/
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #ff6b9d 0%, #c44569 100%);
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

/* 登录状态样式 */
.login-section {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
}

.login-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 32rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  backdrop-filter: blur(20rpx);
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  animation: slideUp 0.3s ease;
  width: 100%;
  max-width: 600rpx;
}

.login-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.login-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
  line-height: 1.6;
}

.nickname-section {
  margin-bottom: 40rpx;
}

.nickname-input {
  width: 100%;
  height: 88rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 44rpx;
  font-size: 32rpx;
  color: #333;
  text-align: center;
  box-sizing: border-box;
  transition: border-color 0.2s ease;
}

.nickname-input:focus {
  border-color: #ff6b9d;
  background: #ffffff;
}

.login-actions {
  display: flex;
  gap: 20rpx;
}

/* 用户信息卡片 */
.user-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 32rpx;
  padding: 50rpx 40rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(20rpx);
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar-btn {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  margin-right: 30rpx;
  background: transparent;
  border: none;
  padding: 0;
}

.avatar-btn::after {
  border: none;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.avatar-edit {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 36rpx;
  height: 36rpx;
  background: #ff6b9d;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #ffffff;
  border: 3rpx solid #ffffff;
}

.user-details {
  flex: 1;
}

.user-name-input {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  background: transparent;
  border: none;
  padding: 0;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.user-actions {
  display: flex;
  gap: 20rpx;
}

.qr-btn, .logout-btn, .login-btn {
  padding: 16rpx 32rpx;
  border-radius: 50rpx;
  font-size: 24rpx;
  border: none;
}

.qr-btn {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #ffffff;
}

.logout-btn {
  background: linear-gradient(135deg, #ff6b9d, #c44569);
  color: #ffffff;
}

.login-btn {
  background: linear-gradient(135deg, #ff6b9d, #c44569);
  color: #ffffff;
}

.qr-btn::after, .logout-btn::after, .login-btn::after {
  border: none;
}

/* 统计数据卡片 */
.stats-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 32rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(20rpx);
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
}

.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.stats-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.refresh-btn {
  background: linear-gradient(135deg, #ff6b9d, #c44569);
  color: #ffffff;
  border-radius: 50rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  border: none;
}

.refresh-btn::after {
  border: none;
}

/* 修复统计网格布局 - 使用 Flexbox 代替 Grid */
.stats-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  gap: 20rpx;
}

.stat-item {
  text-align: center;
  padding: 30rpx 20rpx;
  background: linear-gradient(135deg, rgba(255, 107, 157, 0.1), rgba(196, 69, 105, 0.1));
  border-radius: 20rpx;
  border: 2rpx solid rgba(255, 107, 157, 0.2);
  flex: 1;
  min-width: 180rpx;
  max-width: 200rpx;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #ff6b9d;
  line-height: 1.2;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

.last-update {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
}

/* 功能菜单 */
.menu-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 32rpx;
  overflow: hidden;
  backdrop-filter: blur(20rpx);
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 40rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: background 0.2s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: rgba(255, 107, 157, 0.05);
}

.menu-icon {
  font-size: 48rpx;
  margin-right: 30rpx;
  width: 60rpx;
  text-align: center;
}

.menu-text {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.menu-arrow {
  font-size: 32rpx;
  color: #ccc;
}

/* 快捷操作 */
.quick-actions {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 32rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(20rpx);
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

/* 修复快捷操作网格布局 - 使用 Flexbox 代替 Grid */
.actions-grid {
  display: flex;
  gap: 20rpx;
}

.action-item {
  text-align: center;
  padding: 40rpx 20rpx;
  background: linear-gradient(135deg, rgba(255, 107, 157, 0.05), rgba(196, 69, 105, 0.05));
  border-radius: 20rpx;
  border: 1rpx solid rgba(255, 107, 157, 0.1);
  transition: transform 0.2s ease;
  flex: 1;
}

.action-item:active {
  transform: scale(0.95);
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin: 0 auto 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: white;
}

.action-icon.publish {
  background: linear-gradient(135deg, #ff6b9d, #c44569);
}

.action-icon.search {
  background: linear-gradient(135deg, #667eea, #764ba2);
}

.action-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.action-desc {
  font-size: 24rpx;
  color: #666;
}

/* 二维码弹窗 */
.qr-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.qr-content {
  background: #ffffff;
  border-radius: 32rpx;
  width: 80%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(100rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.qr-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.qr-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f0f0f0;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #666;
}

.close-btn::after {
  border: none;
}

.qr-body {
  padding: 40rpx;
  text-align: center;
}

.qr-user-info {
  margin-bottom: 40rpx;
}

.qr-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin: 0 auto 20rpx;
  border: 4rpx solid #f0f0f0;
}

.qr-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.qr-tip {
  font-size: 28rpx;
  color: #666;
}

.qr-code-container {
  margin: 40rpx 0;
  display: flex;
  justify-content: center;
}

.qr-code {
  width: 400rpx;
  height: 400rpx;
  border-radius: 20rpx;
  border: 1rpx solid #f0f0f0;
}

.qr-loading {
  width: 400rpx;
  height: 400rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
  border-radius: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.qr-actions {
  margin-top: 40rpx;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #ff6b9d, #c44569);
  color: #ffffff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 157, 0.4);
}

.save-btn::after {
  border: none;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  color: white;
}

.loading-text {
  font-size: 32rpx;
  margin-top: 30rpx;
  opacity: 0.8;
}

/* 响应式适配 */
@media screen and (max-width: 400px) {
  .stats-grid {
    flex-direction: column;
  }
  
  .stat-item {
    max-width: none;
  }
  
  .qr-content {
    width: 90%;
  }
  
  .qr-code {
    width: 320rpx;
    height: 320rpx;
  }
  
  .qr-loading {
    width: 320rpx;
    height: 320rpx;
  }
} 