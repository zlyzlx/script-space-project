/**my-rides.wxss**/
/* 与 my-carpool.wxss 基本相同，但调整了一些颜色 */
.container {
  padding: 20rpx;
  background: #fef0f0;
  min-height: 100vh;
  padding-bottom: 230rpx; /* 保持页面底部留白的一致性，适当增加 + 额外留白110rpx */
}

.status-filter {
  display: flex;
  padding: 20rpx 0;
  background-color: white;
  border-bottom: 1rpx solid #eee;
  gap: 0;
}

.filter-item {
  flex: 1;
  padding: 16rpx 0;
  border: 1rpx solid #ddd;
  border-radius: 0;
  font-size: 26rpx;
  color: #666;
  background-color: #f8f8f8;
  text-align: center;
  margin: 0;
}

.filter-item:first-child {
  border-radius: 0;
}

.filter-item:last-child {
  border-radius: 0;
}

.filter-item.active {
  background-color: #ffc1cc;
  color: white;
  border-color: #ffc1cc;
}

.rides-list {
  padding: 0 20rpx;
}

.ride-item {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.ride-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.activity-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.ride-status {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.ride-status.upcoming {
  background-color: #ffe4e7;
  color: #ffc1cc;
}

.ride-status.finished {
  background-color: #fef0f0;
  color: #999;
}

.ride-info {
  margin-bottom: 20rpx;
}

.info-row {
  display: flex;
  margin-bottom: 12rpx;
  align-items: center;
}

.info-row:last-child {
  margin-bottom: 0;
}

.label {
  width: 120rpx;
  font-size: 28rpx;
  color: #666;
}

.value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.price {
  color: #ffc1cc;
  font-weight: bold;
}

.other-participants {
  margin-bottom: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.participants-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.participants-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.participant {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 120rpx;
}

.participant-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-bottom: 8rpx;
  object-fit: cover;
  object-position: center;
}

.participant-name {
  font-size: 22rpx;
  color: #666;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
}

.ride-actions {
  display: flex;
  gap: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-btn {
  flex: 1;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 36rpx;
  font-size: 26rpx;
  margin: 0;
  padding: 0;
}

.contact-btn {
  background-color: #ffc1cc;
  color: white;
}

.quit-btn {
  background-color: #ff9aa2;
  color: white;
}

.rate-btn {
  background-color: #ffb3ba;
  color: #666;
}

.action-btn.secondary {
  background-color: #fef0f0;
  color: #666;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #ccc;
}

.browse-btn {
  background-color: #ffc1cc;
  color: white;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  font-size: 30rpx;
} 