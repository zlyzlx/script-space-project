/**my-carpool.wxss**/
.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 状态筛选 */
.status-filter {
  display: flex;
  padding: 20rpx 0;
  background-color: white;
  border-bottom: 1rpx solid #eee;
  gap: 0;
  justify-content: space-around;
}

.filter-item {
  flex: 1;
  padding: 16rpx 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 0;
  font-size: 26rpx;
  color: #666;
  background-color: #f8f8f8;
  text-align: center;
  margin: 0 1rpx;
}

.filter-item:first-child {
  border-radius: 8rpx 0 0 8rpx;
  margin-left: 20rpx;
}

.filter-item:last-child {
  border-radius: 0 8rpx 8rpx 0;
  margin-right: 20rpx;
}

.filter-item.active {
  background-color: #FF6B6B;
  color: white;
  border-color: #FF6B6B;
}

/* 拼车列表 */
.carpool-list {
  padding: 20rpx;
}

.carpool-item {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.carpool-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.activity-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.status {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.status.recruiting {
  background-color: #E8F5E8;
  color: #4CAF50;
}

.status.full {
  background-color: #FFF3E0;
  color: #FF9800;
}

.status.finished {
  background-color: #F5F5F5;
  color: #999;
}

.carpool-info {
  margin-bottom: 20rpx;
}

.info-row {
  display: flex;
  margin-bottom: 12rpx;
  align-items: center;
}

.info-row:last-child {
  margin-bottom: 0;
}

.label {
  width: 120rpx;
  font-size: 28rpx;
  color: #666;
}

.value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.price {
  color: #FF6B6B;
  font-weight: bold;
}

/* 参与者列表 */
.participants {
  margin-bottom: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.participants-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.participants-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.participant {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 120rpx;
}

.participant-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-bottom: 8rpx;
}

.participant-name {
  font-size: 22rpx;
  color: #666;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
}

/* 操作按钮 */
.carpool-actions {
  display: flex;
  gap: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-btn {
  flex: 1;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 36rpx;
  font-size: 26rpx;
  margin: 0;
  padding: 0;
}

.view-btn {
  background-color: #f8f8f8;
  color: #666;
}

.edit-btn {
  background-color: #4ECDC4;
  color: white;
}

.cancel-btn {
  background-color: #FF6B6B;
  color: white;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #ccc;
  margin-bottom: 40rpx;
}

.publish-btn {
  background-color: #FF6B6B;
  color: white;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  font-size: 30rpx;
} 